#!/usr/bin/python2
import urllib2
import smtplib
from datetime import datetime

now = datetime.now()
current_hour = now.hour
current_minute = now.minute
current_second = now.second
time = str(current_hour)+":"+str(current_minute)+":"+str(current_second)

ip = urllib2.urlopen("http://curlmyip.com").read().strip()
to = 'rs87428@gmail.com'
gmail_user = 'rs87428@gmail.com'
gmail_pwd = 'Anom@ly1'
smtpserver = smtplib.SMTP("smtp.gmail.com",587)
smtpserver.ehlo()
smtpserver.starttls()
smtpserver.ehlo
smtpserver.login(gmail_user, gmail_pwd)
header = 'To:' + to + '\n' + 'From: ' + gmail_user + '\n' + 'Subject:System IP\n'
msg = header+str(ip) 
smtpserver.sendmail(gmail_user, to, msg)
smtpserver.close()
